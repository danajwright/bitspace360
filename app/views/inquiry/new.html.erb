<div class="container">
  <div class="columns sixteen inquiry">
    <h2>GET IN TOUCH</h2>
    <h3>Tell us a bit about yourself and your project</h3>
    <%= form_for @inquiry, method: "post" do |f| %>
    <% if @inquiry.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@member.errors.count, "error") %> prohibited this message from being saved:</h2>

        <ul>
        <% @inquiry.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label "Name" %><span class="required">&nbsp;*</span>
      <%= f.text_field :name, :autofocus => true %>
    </div>

    <div class="field">
      <%= f.label "Email" %><span class="required">&nbsp;*</span>
      <%= f.text_field :email, :autofocus => true %>
    </div>

    <div class="field">
      <%= f.label "Phone number" %><span class="required">&nbsp;*</span>
      <%= f.text_field :phone, :autofocus => true %>
    </div>

    <div class="interest-field">
      <h4>General areas of interest</h4>
      <%= f.check_box :mining %> <%= f.label :dependent, "Mining" %><br>
      <%= f.check_box :co_working %> <%= f.label :dependent, "Co-working" %><br>
      <%= f.check_box :project_support %> <%= f.label :dependent, "Project support" %>
    </div>

    <div class="details-field">
      <%= f.label "Details" %><br>
      <%= f.text_area :details, :autofocus => true, :rows => "4" %>
    </div>

    <div class="actions">
      <input type="submit" class="button" value="Submit">
    </div>

    </div>
  </div>
</div>
<% end %>


