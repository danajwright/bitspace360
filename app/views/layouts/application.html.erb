<!DOCTYPE html>
<html>
<head>
  <title>Bitspace360</title>
  <%= stylesheet_link_tag "application" %>
  <%= csrf_meta_tags %>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Hide Safari on iPhone -->
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <!-- 16x16 favicon -->
  <%= favicon_link_tag('favicon.ico') %>
  <!-- Apple homescreen icons -->
  <%= favicon_link_tag('homescreen-icon-57.png', rel: 'apple-touch-icon', type: 'image/png',  sizes: "57x57") %>
  <%= favicon_link_tag('homescreen-icon-72.png', rel: 'apple-touch-icon', type: 'image/png', sizes: "72x72") %>
  <%= favicon_link_tag('homescreen-icon-114.png', rel: 'apple-touch-icon', type: 'image/png', sizes: "114x114") %>
